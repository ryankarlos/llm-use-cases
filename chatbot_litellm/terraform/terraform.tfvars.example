# Example Terraform variables file
# Copy to terraform.tfvars and fill in your values

env                       = "dev"
project_name              = "litellm-demo"
hosted_zone_name          = "example.com"
subdomain                 = "litellm"
cloudfront_subdomain      = "api"
certificate_authority_arn = "arn:aws:acm-pca:us-east-1:123456789012:certificate-authority/xxxxxxxx-xxxx-xxxx-xxxx-xxxxxxxxxxxx"
image_uri_litellm         = "123456789012.dkr.ecr.us-east-1.amazonaws.com/litellm:latest"

# S3 buckets
s3_buckets = {
  lb_access_logs = "my-lb-logs-bucket"
  litellm        = "my-litellm-config-bucket"
}

# Secrets
litellm_secret_name   = "litellm-secrets"
litellm_secret_values = "{\"LITELLM_MASTER_KEY\":\"sk-xxx\",\"LITELLM_SALT_KEY\":\"salt-xxx\"}"

# Certificate paths
cert_pk   = "/path/to/private-key.pem"
cert_body = "/path/to/certificate.pem"

# LiteLLM config directory
litellm_dir = "../"

# Tags
tag = {
  name = "litellm"
}

# Valkey/Redis parameters
parameter_list = [
  {
    name  = "maxmemory-policy"
    value = "volatile-lru"
  }
]

# Phoenix cloud API key (optional - for Arize Phoenix cloud observability)
phoenix_api_key = ""
